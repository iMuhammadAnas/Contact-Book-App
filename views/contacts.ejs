<!DOCTYPE html>
<html>
<head>
  <title>Contacts</title>
  <style>
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      margin: 0;
      padding: 20px;
      background-color: #e9ecef;
    }
    h2 {
      color: #343a40;
      text-align: center;
      margin-bottom: 20px;
    }
    form {
      margin-bottom: 20px;
      background: #ffffff;
      padding: 20px;
      border-radius: 8px;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
      max-width: 500px;
      margin: auto;
    }
    input {
      margin-right: 10px;
      padding: 12px;
      border: 1px solid #ced4da;
      border-radius: 4px;
      width: calc(50% - 22px);
      transition: border-color 0.3s;
    }
    input:focus {
      border-color: #80bdff;
      outline: none;
    }
    button {
      padding: 12px 20px;
      background-color: #007bff;
      color: white;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      transition: background-color 0.3s;
    }
    button:hover {
      background-color: #0056b3;
    }
    ul {
      list-style-type: none;
      padding: 0;
      max-width: 500px;
      margin: auto;
    }
    li {
      background: #ffffff;
      margin: 10px 0;
      padding: 15px;
      border-radius: 4px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }
    a {
      color: #dc3545;
      text-decoration: none;
      font-weight: bold;
    }
    a:hover {
      text-decoration: underline;
    }
    @media (max-width: 600px) {
      input {
        width: 100%;
        margin-bottom: 10px;
      }
      button {
        width: 100%;
      }
    }
  </style>
</head>
<body>
  <h2><%= username %>'s Contacts</h2>
  <form method="POST" action="/contacts/add">
    <input name="name" placeholder="Name" required>
    <input name="phone" placeholder="Phone" required>
    <button type="submit">Add Contact</button>
  </form>
  <ul>
    <% contacts.forEach(function(contact, idx) { %>
      <li>
        <%= contact.name %> - <%= contact.phone %>
        <a href="/contacts/delete/<%= idx %>">Delete</a>
      </li>
    <% }) %>
  </ul>
</body>
</html>